{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Debug Cucumber Tests",
      "program": "${workspaceFolder}/node_modules/.bin/cucumber-js",
      "args": [
        "--require-module",
        "ts-node/register",
        "--require",
        "src/test/steps/*.ts",
        "--require",
        "src/test/support/hooks.ts",
        "src/test/features/*.feature"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}