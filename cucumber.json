{
    "default": {
        "paths": [
            "src/test/features/"
        ],
        "require": [
            "src/test/steps/*.ts"
        ],
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "publishQuiet": true,
        "dryRun": false,
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            [
                "html",
                "cucumber-report.html"
            ],
            "summary",
            "progress-bar",
            "json:./cucumber-report.json"
        ]
    }
}